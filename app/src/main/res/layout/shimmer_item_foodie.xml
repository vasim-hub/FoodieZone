<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_230sdp"
    android:layout_marginTop="@dimen/_12sdp">

    <View
        android:id="@+id/imageView_foodie"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp"
        android:background="@color/color_shimmer_grey"
        android:paddingTop="@dimen/_5sdp"
        app:layout_constraintDimensionRatio="1:0.6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_list_item"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_foodie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_foodie">

        <View
            android:id="@+id/viewTitle"
            style="@style/FoodieZone.Title"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:background="@color/bg_color_view"
            android:gravity="center|start"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="A7 - Four rings. A clear line." />

        <View
            android:id="@+id/viewDescription"
            style="@style/FoodieZone.Description"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/color_shimmer_grey"
            android:ellipsize="end"
            android:gravity="center|start"
            android:paddingBottom="@dimen/_5sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewTitle"
            tools:text="Don't leave anything to chance. Whether it comes to comfort, style, or dynamics, the Audi Q5 will win you over from the first moment. " />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>